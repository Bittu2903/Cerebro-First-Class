#include<stdio.h>
#include<conio.h>
int main()
{
    int l,b,area,perimeter;
    printf("enter the value of length and breadth:");
    scanf("%d%d",&l,&b);
    area=l*b;
    perimeter=2*(l+b);
    printf("Area of the rectangle is :%d",area);
    printf("\nPerimeter of the rectangle is :%d",perimeter);
    
	getch();
	return 0;	
	
}
