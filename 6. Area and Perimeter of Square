#include<stdio.h>
#include<conio.h>
int main()
{
    int l,b,side,area,perimeter;
    printf("enter the length value of side:");
    scanf("%d",&side);
    area=side*side;
    perimeter=4*side;
    printf("Area of the  is :%d",area);
    printf("\nPerimeter of the square is :%d",perimeter);
    


    printf("\n enter the value of length and breadth:");
    scanf("%d%d",&l,&b);
    area=l*b;
    perimeter=2*(l+b);
    printf("Area of the rectangle is :%d",area);
    printf("\nPerimeter of the rectangle is :%d",perimeter);
    
	
	getch();
	return 0;	
	
}
